FLASK_APP=app.py
FLASK_ENV=development
PORT=5000

# Path to your local media files (videos and documents)
# IMPORTANT: Update this path to where your course videos and documents are stored
MEDIA_PATH=D:/CourseMedia

# Database (Legacy SQLite - not used)
DB_PATH=database.db

# PostgreSQL Database Configuration
# Using existing PostgreSQL from JobTrak service
DB_HOST=localhost
DB_PORT=5432
DB_NAME=streaming_service
DB_USER=jobtrak_user
DB_PASSWORD=jobtrak_secure_password_2024

# Optional: Set to 'true' to skip docker-compose PostgreSQL startup
USE_EXISTING_POSTGRES=true
